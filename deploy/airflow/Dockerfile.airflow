FROM apache/airflow:2.9.3

# 1) Become root to install our project
USER root
WORKDIR /opt/airflow

# 2) Copy in your TOML + source
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src

# 3) Install your package (and its [project] deps) via PEP-517
# hadolint ignore=DL3013,DL3042
RUN python -m pip install --upgrade pip \
  && python -m pip install --no-cache-dir .

# 4) Drop back to the airflow user
USER airflow
